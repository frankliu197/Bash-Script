!/bin/bash

#download hub
sudo add-apt-repository -y ppa:cpick/hub

#lutris
ver=$(lsb_release -sr); if [ $ver != "18.10" -a $ver != "18.04" -a $ver != "16.04" ]; then ver=18.04; fi
echo "deb http://download.opensuse.org/repositories/home:/strycore/xUbuntu_$ver/ ./" | sudo tee /etc/apt/sources.list.d/lutris.list
wget -q https://download.opensuse.org/repositories/home:/strycore/xUbuntu_$ver/Release.key -O- | sudo apt-key add -

#steam 
sudo add-apt-repository -y multiverse

#timeshift
sudo apt-add-repository -y ppa:teejee2008/ppa

#pycharm
sudo add-apt-repository -y ppa:mystic-mirage/pycharm

#intllij
sudo add-apt-repositoy -y ppa:ubuntuhandbook1/apps

sudo apt update

sudo apt install hub lutris playonlinux steam timeshift pycharm  intellij-idea-ultimate
sudo apt install bumblebee bumblebee-nvidia primus linux-headers-generick 
